{
	"private": true,
	"devDependencies": {
		"@_tw/themejson": "^0.1.2",
		"@angular-eslint/template-parser": "^16.3.1",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@wordpress/prettier-config": "^2.25.13",
		"adm-zip": "^0.5.16",
		"alpinejs": "^3.14.1",
		"archiver": "^5.3.2",
		"cross-env": "^7.0.3",
		"esbuild": "0.23.0",
		"esbuild-envfile-plugin": "^1.0.7",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"postcss-import-ext-glob": "^2.1.1",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"swiper": "^10.3.1",
		"tailwindcss": "^3.4.12"
	},
	"scripts": {
		"build:esbuild": "cross-env NODE_ENV=production node ./javascript/build.js",
		"build:tailwind:editor": "npm run development:tailwind:editor",
		"build:tailwind:frontend": "npm run development:tailwind:frontend",
		"build": "run-p build:**",
		"dev": "npm run development",
		"development:tailwind:frontend": "npx tailwindcss --postcss --minify -i ./tailwind/tailwind.css -c ./tailwind/tailwind.config.js -o ./theme/style.css",
		"development:tailwind:editor": "cross-env _TW_TARGET=editor npx tailwindcss --postcss --minify -i ./tailwind/tailwind.css -c ./tailwind/tailwind.config.js -o ./theme/style-editor.css",
		"development:esbuild": "cross-env NODE_ENV=development node ./javascript/build.js",
		"development": "run-p development:**",
		"lint-fix:eslint": "npx eslint theme/ --fix",
		"lint-fix:prettier": "npx prettier --write .",
		"lint-fix": "run-p lint-fix:*",
		"lint:eslint": "npx eslint theme/",
		"lint:prettier": "npx prettier --check .",
		"lint": "run-p lint:*",
		"watch:esbuild": "npm run development:esbuild -- --watch",
		"watch:tailwind:editor": "npm run development:tailwind:editor -- --watch",
		"watch:tailwind:frontend": "npm run development:tailwind:frontend -- --watch",
		"watch": "run-p watch:**",
		"zip": "node node_scripts/zip.js darkjail-acf-tailwind"
	},
	"prettier": "@wordpress/prettier-config"
}
